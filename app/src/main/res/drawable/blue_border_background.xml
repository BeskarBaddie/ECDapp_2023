<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Set the solid color (same as card's background) -->
            <corners android:radius="16dp" /> <!-- Set the corner radius (same as card's corner radius) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
            android:color="@android:color/holo_blue_light" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
